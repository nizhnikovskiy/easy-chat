{
  "name": "easy-chat",
  "version": "0.1.0",
  "description": "Lightweight and customizable React chat components library",
  "type": "module",
  "main": "./dist/easy-chat.cjs",
  "module": "./dist/easy-chat.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/easy-chat.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/easy-chat.cjs"
      }
    },
    "./styles": "./dist/easy-chat.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:types && npm run build:lib",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:types": "tsc -p tsconfig.lib.json",
    "build:ladle": "ladle build --base /easy-chat/",
    "ladle": "ladle serve",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "chat",
    "chat-ui",
    "messaging",
    "components",
    "typescript",
    "ui-library"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nizhnikovskiy/easy-chat"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@ladle/react": "^5.1.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  },
  "sideEffects": [
    "*.css"
  ]
}
